<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <style>
        /* Add this CSS to your styles.css or keep it here for demonstration */
        .view-button {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s;
            font-weight: bold;
        }

        .view-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .delete-button {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
            font-weight: bold;
            border: 2px solid transparent;
        }

        .delete-button:hover {
            background-color: #c82333;
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            border: 2px solid #fff;
        }

        .delete-button:active {
            transform: scale(0.95);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .posts {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .post {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .landing-message {
            text-align: center;
            margin: 50px 0;
            color: #00ffdd;
        }

        .landing-message h2 {
            font-size: 2em;
            margin-bottom: 10px;
            color: #d4ff00;
        }

        .landing-message p {
            font-size: 1.2em;
        }

        .landing-message a {
            margin: 10px;
            padding: 10px 20px;
            background-color: #007BFF;
            color: rgb(255, 255, 255);
            text-decoration: none;
            border-radius: 5px;
        }

        .landing-message a:hover {
            background-color: #0056b3;
        }

        .floating-images {
            display: flex;
            justify-content: center;
            overflow: hidden;
            position: relative;
            gap: 40px;
            /* Adds gap between images */
        }

        .floating-image {
            width: 250px;
            /* Adjust size as needed */
            height: 250px;
            /* Adjust size as needed */
            object-fit: cover;
            transition: 0.3s linear;
            filter: grayscale(100%);
            -webkit-mask:
                left var(--_i, 0%) top 10% / 45% 45% no-repeat linear-gradient(#000 0 0),
                bottom var(--_i, 0%) left 10% / 45% 45% no-repeat linear-gradient(#000 0 0),
                top var(--_i, 0%) right 10% / 45% 45% no-repeat linear-gradient(#000 0 0),
                right var(--_i, 0%) bottom 10% / 45% 45% no-repeat linear-gradient(#000 0 0);
            mask: var(--m);
            cursor: pointer;
        }

        .floating-image:hover {
            --_i: 10%;
            filter: grayscale(0);
            /* Removes grayscale on hover */
            transition: transform 0.3s ease, filter 0.3s linear;
            transform: scale(1.1);
            /* Slight zoom effect */
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <a href="/">Blog</a>
        <div class="auth-links">
            <% if (user) { %>
                <a href="/profile">Profile</a>
                <a href="/About">About</a>
                <a href="/news">Latest News</a> <!-- Add this line -->
                <a href="/logout">Logout</a>
                <% } else { %>
                    <a href="javascript:void(0)" id="loginBtn">Login</a>
                    <a href="javascript:void(0)" id="signupBtn">Sign Up</a>
                    <% } %>
        </div>
    </div>

    <!-- Main Content Container -->
    <div class="content-container">
        <% if (user) { %>
            <!-- Create New Post Button -->
            <a href="/create" class="create-post-button">Create New Post</a>

            <!-- Blog Posts Section -->
            <h2>All Posts</h2>
            <div class="posts">
                <% posts.forEach(post=> { %>
                    <div class="post">
                        <h3><a href="/post/<%= post._id %>">
                                <%= post.title %>
                            </a></h3>
                        <p><strong>Posted by:</strong>
                            <%= user.username %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= new Date(post.createdAt).toLocaleString() %>
                        </p>
                        <a href="/post/<%= post._id %>" class="view-button">View</a>
                        <% if (user && post.userEmail===user.email) { %>
                            <form action="/delete/<%= post._id %>" method="POST" style="display: inline;">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                            <% } %>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <!-- Landing Page Message -->
                <div class="landing-message">
                    <h2>Welcome to Our Blog Channel!</h2>
                    <p>Join us to share your thoughts, experiences, and stories.</p>
                    <p>Please log in to view all posts and create new
                        ones.</p>
                </div>
                <!-- Floating Images Section -->
                <div class="floating-images">
                    <% const images=['/images/image1.jpg', '/images/image2.jpg' , '/images/image3.jpg' ]; %>
                        <% images.forEach((image, index)=> { %>
                            <img src="<%= image %>" alt="Blog Image" class="floating-image" style="--i: <%= index %>">
                            <% }); %>
                </div>
                <% } %>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; Anindya 2024 Blog Website. All Rights Reserved.</p>
    </footer>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span class="modal-close" id="loginClose">&times;</span>
            <h2>Login</h2>
            <form action="/login" method="POST">
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Login</button>
            </form>
            <p>Don't have an account? <a href="#" id="openSignupModal">Sign up</a></p>
        </div>
    </div>

    <!-- Signup Modal -->
    <div id="signupModal" class="modal">
        <div class="modal-content">
            <span class="modal-close" id="signupClose">&times;</span>
            <h2>Sign Up</h2>
            <form action="/signup" method="POST">
                <input type="text" name="username" placeholder="Username" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <button type="submit">Sign Up</button>
            </form>
            <p>Already have an account? <a href="#" id="openLoginModal">Login</a></p>
        </div>
    </div>
    <!-- External JavaScript -->
    <script src="/js/modal.js"></script>
</body>

</html>